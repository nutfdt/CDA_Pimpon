{% extends 'base.html.twig' %}

{% block title %}Ajout d'un Véhicule{% endblock %}

{% block body %}
    <style>
        body { background: #000A5A; }
        .navbar { background-color: #212E9A; border-bottom: 3px solid white; }
        .footer { background-color: #212E9A; border-top: 3px solid white; width: 100%; height: 50px; margin-top: 260px; }
        .footer p { color:#F5F5F5; text-align:center; font-size:20px; margin-top: 5px; }

        h1, h2 {
            text-align: center;
            color: #F5F5F5;
            font-size: xx-large;
        }

        .rejoigneznous {
            background-color: #F5F5F5;
            text-align:center;
            justify-content: center;
            font-weight: bold;
            font-size: xx-large;
            margin-top: 50px;
            padding-bottom: 1px;
        }

        .rejoigneznous p {
            font-size: xx-large;
            font-weight: bold;

        }

        .custom-label label {
            color: white; /* ou la couleur que vous souhaitez */
        }

        .centre {
            margin-top: 40px;
        }

    </style>

<body>

<nav class="navbar navbar-expand-lg">
    <div class="container-fluid">
        <a class="navbar-brand" href="/"><img style="height: 60px;" src="{{ asset('img/SDPD.png') }}"/></a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
            <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
        </div>
    </div>
</nav>

<div class="rejoigneznous container">
    <p>VEHICULE</p>
</div>


    <br>
    <h2>Ajout véhicule</h2>
    <br>
{{ form_start(formV, { 'attr': { 'class': 'form-horizontal' } }) }}
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="mb-3 custom-label">
                {{ form_label(formV.nom, 'Nom : ', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(formV.nom, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
            </div>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="mb-3 custom-label">
                {{ form_label(formV.matricule, 'Matricule : ', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(formV.matricule, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
            </div>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="mb-3 custom-label">
                {{ form_label(formV.marque, 'Marque : ', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(formV.marque, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
            </div>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="mb-3 custom-label">
                {{ form_label(formV.place, 'Nb Place : ', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(formV.place, {'attr': {'class': 'form-control', 'required': 'required'}}) }}
            </div>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="mb-3 custom-label">
                {{ form_label(formV.type, 'Type : ', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(formV.type, {'attr': {'class': 'form-select', 'required': 'required'}}) }}
            </div>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <div class="mb-3 custom-label">
                {{ form_label(formV.idCaserne, 'Caserne : ', {'label_attr': {'class': 'form-label'}}) }}
                {{ form_widget(formV.idCaserne, {'attr': {'class': 'form-select', 'required': 'required'}}) }}
            </div>
        </div>
    </div>
    <div class="row justify-content-center">
        <div class="col-md-6">
            <a class="btn btn-danger" href="{{ path('home_vehicule') }}" role="button">Retour</a>
            <button type="submit" class="btn btn-primary">Ajouter</button>
        </div>
    </div>
</div>
{{ form_end(formV) }}

<footer class="footer">
    <p> Copyright © 2023 Brigade de sapeurs-pompiers de Paris </p>
</footer>
</body>
{% endblock %}
