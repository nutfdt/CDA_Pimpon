{% extends 'base.html.twig' %}

{% block title %}Hello VehiculeController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    <div class="example-wrapper">
        <h1>Véhicule
            <a class="btn btn-primary"
               href="{{ path('add_vehicule') }}"
               role="button">Ajouter</a>
        </h1>
        <br>
        <h2>Liste des véhicules</h2>
        <br>
        <table class="table" >
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Matricule</th>
                <th scope="col">Marque</th>
                <th scope="col">Place</th>
                <th scope="col">Caserne</th>
                <th scope="col">Type</th>
                <th scope="col">Opérations</th>
            </tr>
            </thead>
            <tbody>
            {% for vehicule in vehicules %}
                <tr>
                    <th scope="row"> {{ vehicule.id }} </th>
                    <td> {{ vehicule.matricule }} </td>
                    <td> {{ vehicule.marque }} </td>
                    <td> {{ vehicule.place }} </td>
                    <td> {{ vehicule.idCaserne.adresse }} </td>
                    <td> {{ vehicule.idType.libelle }} </td>
                    <td>
                        <a class="btn btn-primary"
                           href="{{ path('edit_vehicule', {id: vehicule.id}) }}"
                           role="button">Edit</a>
                        <a class="btn btn-danger"
                           href="{{ path('delete_vehicule', {id: vehicule.id}) }}"
                           role="button">Delete</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
