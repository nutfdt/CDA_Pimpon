{% extends 'base.html.twig' %}

{% block title %}Hello CompanieController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Véhicule</h1>
    <br>
    <h2>Modification du véhicule</h2>
    <br>
    {{ form_start(editFormV, { 'attr': { 'class': 'form-horizontal'}}) }}
    <div class="mb-3">
        {{ form_label(editFormV.matricule, 'Matricule : ', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(editFormV.matricule, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="mb-3">
        {{ form_label(editFormV.marque, 'Marque : ', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(editFormV.marque, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="mb-3">
        {{ form_label(editFormV.place, 'Place : ', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(editFormV.place, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="mb-3">
        {{ form_label(editFormV.idCaserne, 'Caserne : ', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(editFormV.idCaserne, {'attr': {'class': 'form-select'}}) }}
    </div>
    <div class="mb-3">
        {{ form_label(editFormV.idType, 'Type : ', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(editFormV.idType, {'attr': {'class': 'form-select'}}) }}
    </div>
    <a class="btn btn-danger"
       href="{{ path('home_vehicule') }}"
       role="button">Retour</a>
    <button type="submit" class="btn btn-primary">Modifier</button>
    {{ form_end(editFormV) }}

</div>
{% endblock %}
