{% extends 'base.html.twig' %}

{% block title %}Hello DetailInterventionController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

    <div class="example-wrapper">
        <h1>Détail intervention
            <a class="btn btn-primary"
               href="{{ path('add_detailInter') }}"
               role="button">Ajouter</a>
        </h1>
        <br>
        <h2>Liste des détails intervention</h2>
        <br>
        <table class="table" >
            <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Intervention</th>
                <th scope="col">Pompier</th>
                <th scope="col">Véhicule</th>
                <th scope="col">Heure début</th>
                <th scope="col">Heure fin</th>
                <th scope="col">Opérations</th>
            </tr>
            </thead>
            <tbody>
            {% for detailInter in detailInters %}
                <tr>
                    <th scope="row"> {{ detailInter.id }} </th>
                    <td> {{ detailInter.idIntervention.libelle }} </td>
                    <td> {{ detailInter.idPompier.nom }} </td>
                    <td> {{ detailInter.idVehicule.matricule }} </td>
                    <td> {{ detailInter.heureDebut }} </td>
                    <td> {{ detailInter.heureFin }} </td>
                    <td>
                        <a class="btn btn-primary"
                           href="{{ path('edit_detailInter', {id: detailInter.id}) }}"
                           role="button">Edit</a>
                        <a class="btn btn-danger"
                           href="{{ path('delete_detailInter', {id: detailInter.id}) }}"
                           role="button">Delete</a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
{% endblock %}
