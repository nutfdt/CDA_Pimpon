{% extends 'base.html.twig' %}

{% block title %}Hello PompierController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Pompier</h1>
    <br>
    <h2>Modification du pompier</h2>
    <br>
    {{ form_start(editFormP, { 'attr': { 'class': 'form-horizontal'}}) }}
                <div class="mb-3">
            {{ form_label(editFormP.nom, 'Nom : ', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(editFormP.nom, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-3">
            {{ form_label(editFormP.prenom, 'Prénom : ', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(editFormP.prenom, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-3">
            {{ form_label(editFormP.grade, 'Grade : ', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(editFormP.grade, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-3">
            {{ form_label(editFormP.telephone, 'Téléphone : ', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(editFormP.telephone, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-3">
            {{ form_label(editFormP.adresse, 'Adresse : ', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(editFormP.adresse, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-3">
            {{ form_label(editFormP.email, 'Email : ', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(editFormP.email, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-3">
            {{ form_label(editFormP.mdp, 'MDP : ', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(editFormP.mdp, {'attr': {'class': 'form-control'}}) }}
        </div>
        <a class="btn btn-danger"
           href="{{ path('home_pompier') }}"
           role="button">Retour</a>
        <button type="submit" class="btn btn-primary">Modifier</button>
    {{ form_end(editFormP) }}

</div>
{% endblock %}
