{% extends 'base.html.twig' %}

{% block title %}Hello PompierController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Pompier</h1>
    <br>
    <h2>Ajout pompier</h2>
    <br>
    {{ form_start(formP, { 'attr': { 'class': 'form-horizontal'}}) }}
        <div class="mb-3">
            {{ form_label(formP.nom, 'Nom : ', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(formP.nom, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-3">
            {{ form_label(formP.prenom, 'Prénom : ', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(formP.prenom, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-3">
            {{ form_label(formP.grade, 'Grade : ', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(formP.grade, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-3">
            {{ form_label(formP.telephone, 'Téléphone : ', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(formP.telephone, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-3">
            {{ form_label(formP.adresse, 'Adresse : ', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(formP.adresse, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-3">
            {{ form_label(formP.email, 'Email : ', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(formP.email, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-3">
            {{ form_label(formP.mdp, 'MDP : ', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(formP.mdp, {'attr': {'class': 'form-control'}}) }}
        </div>
        <a class="btn btn-danger"
           href="{{ path('home_pompier') }}"
           role="button">Retour</a>
        <button type="submit" class="btn btn-primary">Ajouter</button>
    {{ form_end(formP) }}

</div>
{% endblock %}
