{% extends 'base.html.twig' %}

{% block title %}Hello PompierController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Pompier
        <a class="btn btn-primary"
           href="{{ path('add_pompier') }}"
           role="button">Ajouter</a>
    </h1>
    <br>
    <h2>Liste des pompiers</h2>
    <br>
    <table class="table" >
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nom</th>
                <th scope="col">Prénom</th>
                <th scope="col">Grade</th>
                <th scope="col">Téléphone</th>
                <th scope="col">Adresse</th>
                <th scope="col">Email</th>
                <th scope="col">MDP</th>
                <th scope="col">Opérations</th>
            </tr>
        </thead>
        <tbody>
        {% for pompier in pompiers %}
            <tr>
                <th scope="row"> {{ pompier.id }} </th>
                <td> {{ pompier.nom }} </td>
                <td> {{ pompier.prenom }} </td>
                <td> {{ pompier.grade }} </td>
                <td> {{ pompier.telephone }} </td>
                <td> {{ pompier.adresse }} </td>
                <td> {{ pompier.email }} </td>
                <td> {{ pompier.mdp }} </td>
                <td>
                    <a class="btn btn-primary"
                       href="{{ path('edit_pompier', {id: pompier.id}) }}"
                       role="button">Edit</a>
                    <a class="btn btn-danger"
                       href="{{ path('delete_pompier', {id: pompier.id}) }}"
                       role="button">Delete</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</div>
{% endblock %}
