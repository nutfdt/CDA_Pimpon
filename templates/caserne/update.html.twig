{% extends 'base.html.twig' %}

{% block title %}Hello CompanieController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Companie</h1>
    <br>
    <h2>Modification de la companie</h2>
    <br>
    {{ form_start(editFormC, { 'attr': { 'class': 'form-horizontal'}}) }}
    <div class="mb-3">
        {{ form_label(editFormC.adresse, 'Adresse : ', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(editFormC.adresse, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="mb-3">
        {{ form_label(editFormC.ville, 'Ville : ', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(editFormC.ville, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="mb-3">
        {{ form_label(editFormC.codePostal, 'Code postal : ', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(editFormC.codePostal, {'attr': {'class': 'form-control'}}) }}
    </div>
    <div class="mb-3">
        {{ form_label(editFormC.idCompanie, 'Companie : ', {'label_attr': {'class': 'form-label'}}) }}
        {{ form_widget(editFormC.idCompanie, {'attr': {'class': 'form-select'}}) }}
    </div>
    <a class="btn btn-danger"
       href="{{ path('home_caserne') }}"
       role="button">Retour</a>
    <button type="submit" class="btn btn-primary">Modifier</button>
    {{ form_end(editFormC) }}

</div>
{% endblock %}
