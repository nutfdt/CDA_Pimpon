{% extends 'base.html.twig' %}

{% block title %}Hello CaserneController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Caserne
        <a class="btn btn-primary"
           href="{{ path('add_caserne') }}"
           role="button">Ajouter</a>
    </h1>
    <br>
    <h2>Liste des casernes</h2>
    <br>
    <table class="table" >
        <thead>
        <tr>
            <th scope="col">#</th>
            <th scope="col">Adresse</th>
            <th scope="col">Ville</th>
            <th scope="col">Code Postal</th>
            <th scope="col">Companie</th>
            <th scope="col">Op√©rations</th>
        </tr>
        </thead>
        <tbody>
        {% for caserne in casernes %}
            <tr>
                <th scope="row"> {{ caserne.id }} </th>
                <td> {{ caserne.adresse }} </td>
                <td> {{ caserne.ville }} </td>
                <td> {{ caserne.codePostal }} </td>
                <td> {{ caserne.idCompanie.nom }} </td>
                <td>
                    <a class="btn btn-primary"
                       href="{{ path('edit_caserne', {id: caserne.id}) }}"
                       role="button">Edit</a>
                    <a class="btn btn-danger"
                       href="{{ path('delete_caserne', {id: caserne.id}) }}"
                       role="button">Delete</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
