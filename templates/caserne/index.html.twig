{% extends 'base.html.twig' %}

{% block title %}Hello CaserneController!{% endblock %}

{% block body %}
<style>
    body { background: #000A5A; }
    .navbar { background-color: #212E9A; border-bottom: 3px solid white; }
    .footer { background-color: #212E9A; border-top: 3px solid white; width: 100%; height: 50px; margin-top: 200px; }
    .footer p { color:#F5F5F5; text-align:center; font-size:20px; margin-top: 5px; }
    .rejoigneznous {
        background-color: #F5F5F5;
        text-align:center;
        justify-content: center;
        font-weight: bold;
        font-size: xx-large;
        margin-top: 50px;
        padding-bottom: 1px;
    }

    .rejoigneznous p {
        font-size: xx-large;
        font-weight: bold;

    }

    h2 {
        text-align: center;
        color: #F5F5F5;
        font-size: xx-large;

    }

    .card {
        margin-bottom: 25px;
    }
</style>

    <body>

    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <a class="navbar-brand" href="/"><img style="height: 60px;" src="{{ asset('img/SDPD.png') }}"/></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
            </div>
        </div>
    </nav>

    <div class="rejoigneznous container">
        <p>CASERNE             <a class="btn btn-primary"
                                    href="{{ path('add_caserne') }}"
                                    role="button">Ajouter</a></p>
    </div>

    <br>
    <h2>Liste des casernes</h2>
    <br>

    <div class="container">
        <div class="row">
            {% for caserne in casernes %}
                <div class="col-md-4">
                    <div class="card">
                        <img src="{{ asset('img/pompier.jpg') }}"class="card-img-top" alt="...">

                        <div class="card-body">
                            <h5 class="card-title">ID {{ caserne.id }} | {{ caserne.idCompanie.nom }}</h5>
                            <p class="card-text">Adresse : {{ caserne.adresse }} | Ville : {{ caserne.ville }} | CP : {{ caserne.codePostal }}</p>
                            <a class="btn btn-primary"
                               href="{{ path('edit_caserne', {id: caserne.id}) }}"
                               role="button">Edit</a>
                            <a class="btn btn-danger delete-formation"
                               href="{{ path('delete_caserne', {id: caserne.id}) }}"
                               role="button"
                               data-id="{{ caserne.id }}">Delete</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

    <footer class="footer">
        <p> Copyright Â© 2023 Brigade de sapeurs-pompiers de Paris </p>
    </footer>
    </body>
{% endblock %}
