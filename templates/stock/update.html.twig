{% extends 'base.html.twig' %}

{% block title %}Hello CompanieController!{% endblock %}

{% block body %}
    <style>
        body { background: #000A5A; }
        .navbar { background-color: #212E9A; border-bottom: 3px solid white; }
        .footer { background-color: #212E9A; border-top: 3px solid white; width: 100%; height: 50px; margin-top: 50px; }
        .footer p { color:#F5F5F5; text-align:center; font-size:20px; margin-top: 5px; }

        h1, h2 {
            text-align: center;
            color: #F5F5F5;
            font-size: xx-large;
        }

        .example-wrapper {
            margin: 1em auto;
            max-width: 800px;
            width: 95%;
            font: 18px/1.5 sans-serif;
        }

        .example-wrapper code {
            background: #F5F5F5;
            padding: 2px 6px;
        }

        .mb-3 {
            margin-bottom: 1rem;
        }

        .form-label {
            color: white;
        }

        .form-select, .form-control {
            width: 100%;
            padding: .375rem .75rem;
            display: inline-block;
            border: 1px solid #ced4da;
            border-radius: .25rem;
            box-sizing: border-box;
        }

        .btn {
            display: inline-block;
            font-weight: 400;
            color: #212529;
            text-align: center;
            vertical-align: middle;
            user-select: none;
            background-color: #007bff;
            border: 1px solid #007bff;
            padding: .375rem .75rem;
            font-size: 1rem;
            line-height: 1.5;
            border-radius: .25rem;
            transition: color .15s ease-in-out, background-color .15s ease-in-out, border-color .15s ease-in-out, box-shadow .15s ease-in-out;
        }

        .btn-primary {
            color: #fff;
            background-color: #007bff;
            border-color: #007bff;
        }

        .btn-danger {
            color: #fff;
            background-color: #dc3545;
            border-color: #dc3545;
        }
    </style>

    <body>
    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <a class="navbar-brand" href="/"><img style="height: 60px;" src="{{ asset('img/SDPD.png') }}"/></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
            </div>
        </div>
    </nav>

    <div class="example-wrapper">
        <h1>Stock</h1>
        <br>
        <h2>Modification du stock</h2>
        <br>
        {{ form_start(editFormS, { 'attr': { 'class': 'form-horizontal'}}) }}
        <div class="mb-3">
            {{ form_label(editFormS.idCaserne, 'Caserne : ', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(editFormS.idCaserne, {'attr': {'class': 'form-select'}}) }}
        </div>
        <div class="mb-3">
            {{ form_label(editFormS.idEquipement, 'Equipement : ', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(editFormS.idEquipement, {'attr': {'class': 'form-select'}}) }}
        </div>
        <div class="mb-3">
            {{ form_label(editFormS.quantite, 'Quantité : ', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(editFormS.quantite, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-3">
            {{ form_label(editFormS.limiteStock, 'Limite Stock : ', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(editFormS.limiteStock, {'attr': {'class': 'form-control'}}) }}
        </div>
        <a class="btn btn-danger" href="{{ path('home_stock') }}" role="button">Retour</a>
        <button type="submit" class="btn btn-primary">Modifier</button>
        {{ form_end(editFormS) }}
    </div>
    </body>

    <footer class="footer">
        <p> Copyright © 2023 Brigade de sapeurs-pompiers de Paris </p>
    </footer>
{% endblock %}
