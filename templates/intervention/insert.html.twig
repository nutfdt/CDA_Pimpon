{% extends 'base.html.twig' %}

{% block title %}Hello FormationPimponController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Intervention</h1>
    <br>
    <h2>Ajout Intervention</h2>
    <br>
    {{ form_start(formI, { 'attr': { 'class': 'form-horizontal'}}) }}
        <div class="mb-3">
            {{ form_label(formI.libelle, 'Libelle : ', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(formI.libelle, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-3">
            {{ form_label(formI.date, 'Date : ', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(formI.date, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-3">
            {{ form_label(formI.duree, 'Dur√©e : ', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(formI.duree, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-3">
            {{ form_label(formI.urgence, 'Urgence : ', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(formI.urgence, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-3">
            {{ form_label(formI.conclusion, 'Conclusion : ', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(formI.conclusion, {'attr': {'class': 'form-control'}}) }}
        </div>
        <a class="btn btn-danger"
           href="{{ path('home_intervention') }}"
           role="button">Retour</a>
        <button type="submit" class="btn btn-primary">Ajouter</button>
    {{ form_end(formI) }}

</div>
{% endblock %}
