{% extends 'base.html.twig' %}

{% block title %}Hello FormationPimponController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Intervention</h1>
    <br>
    <h2>Modification Intervention</h2>
    <br>
    {{ form_start(editFormI, { 'attr': { 'class': 'form-horizontal'}}) }}
        <div class="mb-3">
            {{ form_label(editFormI.libelle, 'Libellé : ', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(editFormI.libelle, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-3">
            {{ form_label(editFormI.date, 'Date : ', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(editFormI.date, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-3">
            {{ form_label(editFormI.duree, 'Durée : ', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(editFormI.duree, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-3">
            {{ form_label(editFormI.urgence, 'Urgence : ', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(editFormI.urgence, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-3">
            {{ form_label(editFormI.conclusion, 'Conclusion : ', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(editFormI.conclusion, {'attr': {'class': 'form-control'}}) }}
        </div>
    <a class="btn btn-danger"
       href="{{ path('home_intervention') }}"
       role="button">Retour</a>
    <button type="submit" class="btn btn-primary">Modifier</button>
    {{ form_end(editFormI) }}

</div>
{% endblock %}
