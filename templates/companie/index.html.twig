{% extends 'base.html.twig' %}

{% block title %}Hello CompanieController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Companie
        <a class="btn btn-primary"
           href="{{ path('add_companie') }}"
           role="button">Ajouter</a>
    </h1>
    <br>
    <h2>Liste des companies</h2>
    <br>
    <table class="table" >
        <thead>
            <tr>
                <th scope="col">#</th>
                <th scope="col">Nom</th>
                <th scope="col">Secteur</th>
                <th scope="col">Op√©rations</th>
            </tr>
        </thead>
        <tbody>
        {% for companie in companies %}
            <tr>
                <th scope="row"> {{ companie.id }} </th>
                <td> {{ companie.nom }} </td>
                <td> {{ companie.secteur }} </td>
                <td>
                    <a class="btn btn-primary"
                       href="{{ path('edit_companie', {id: companie.id}) }}"
                       role="button">Edit</a>
                    <a class="btn btn-danger"
                       href="{{ path('delete_companie', {id: companie.id}) }}"
                       role="button">Delete</a>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

</div>
{% endblock %}
