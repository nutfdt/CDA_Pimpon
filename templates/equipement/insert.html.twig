{% extends 'base.html.twig' %}

{% block title %}Hello CompanieController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Equipement</h1>
    <br>
    <h2>Ajout equipement</h2>
    <br>
    {{ form_start(formE, { 'attr': { 'class': 'form-horizontal'}}) }}
        <div class="mb-3">
            {{ form_label(formE.nom, 'Nom : ', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(formE.nom, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-3">
            {{ form_label(formE.reference, 'Référence : ', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(formE.reference, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-3">
            {{ form_label(formE.libelle, 'Libellé : ', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(formE.libelle, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-3">
            {{ form_label(formE.contact, 'Contact : ', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(formE.contact, {'attr': {'class': 'form-control'}}) }}
        </div>
        <a class="btn btn-danger"
           href="{{ path('home_equipement') }}"
           role="button">Retour</a>
        <button type="submit" class="btn btn-primary">Ajouter</button>
    {{ form_end(formE) }}

</div>
{% endblock %}
