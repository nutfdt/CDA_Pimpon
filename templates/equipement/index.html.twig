{% extends 'base.html.twig' %}

{% block title %}Liste des Equipements{% endblock %}

{% block body %}
    <style>
        body { background: #000A5A; }
        .navbar { background-color: #212E9A; border-bottom: 3px solid white; }
        .footer { background-color: #212E9A; border-top: 3px solid white; width: 100%; height: 50px; margin-top: 712px; }
        .footer p { color:#F5F5F5; text-align:center; font-size:20px; margin-top: 5px; }
        .rejoigneznous {
            background-color: #F5F5F5;
            text-align:center;
            justify-content: center;
            font-weight: bold;
            font-size: xx-large;
            margin-top: 50px;
            padding-bottom: 1px;
        }

        .rejoigneznous p {
            font-size: xx-large;
            font-weight: bold;

        }

        h2 {
            text-align: center;
            color: #F5F5F5;
            font-size: xx-large;

        }

        .card {
            margin-bottom: 25px;
        }

    </style>
    <body>
    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <a class="navbar-brand" href="/"><img style="height: 60px;" src="{{ asset('img/SDPD.png') }}"/></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
            </div>
        </div>
    </nav>

    <div class="rejoigneznous container">
        <p>Equipement
            <a class="btn btn-primary"
               href="{{ path('add_equipement') }}"
               role="button">Ajouter</a>
        </p>
    </div>

    <br>
    <h2>Liste des équipements</h2>
    <br>

    <div class="container">
        <div class="row">
            {% for equipement in equipements %}
                <div class="col-md-4">
                    <div class="card">
                        <img src="{{ asset('img/pompier.jpg') }}" class="card-img-top" alt="...">

                        <div class="card-body">
                            <h5 class="card-title"> {{ equipement.reference }} | {{ equipement.nom }}</h5>
                            <p class="card-text">Libellé : {{ equipement.libelle }} | Contact : {{ equipement.nomContact }} |{{ equipement.telContact }}</p>
                            <a class="btn btn-primary"
                               href="{{ path('edit_equipement', {id: equipement.id}) }}"
                               role="button">Edit</a>
                            <a class="btn btn-danger"
                               href="{{ path('delete_equipement', {id: equipement.id}) }}"
                               role="button">Delete</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>

    <footer class="footer">
        <p> Copyright © 2023 Brigade de sapeurs-pompiers de Paris </p>
    </footer>
    </body>
{% endblock %}
