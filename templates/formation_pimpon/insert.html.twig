{% extends 'base.html.twig' %}

{% block title %}Hello FormationPimponController!{% endblock %}

{% block body %}
    <style>
        body { background: #000A5A; }
        .navbar { background-color: #212E9A; border-bottom: 3px solid white; }
        .footer { background-color: #212E9A; border-top: 3px solid white; width: 100%; height: 50px; margin-top: 50px; }
        .footer p { color:#F5F5F5; text-align:center; font-size:20px; margin-top: 5px; }

        h1, h2 {
            text-align: center;
            color: #F5F5F5;
            font-size: xx-large;
        }

        .rejoigneznous {
            background-color: #F5F5F5;
            text-align:center;
            justify-content: center;
            font-weight: bold;
            font-size: xx-large;
            margin-top: 50px;
            padding-bottom: 1px;
        }

        .rejoigneznous p {
            font-size: xx-large;
            font-weight: bold;

        }

        .custom-label label {
            color: white; /* ou la couleur que vous souhaitez */
        }

        .centre {
            margin-top: 40px;
        }

    </style>

    <body>

    <nav class="navbar navbar-expand-lg">
        <div class="container-fluid">
            <a class="navbar-brand" href="/"><img style="height: 60px;" src="{{ asset('img/SDPD.png') }}"/></a>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
            </div>
        </div>
    </nav>

    <div class="rejoigneznous container">
        <p>FORMATION PIMPON</p>
    </div>

    <div class="centre">
        <h2>Ajout formation pompier</h2>

        {{ form_start(formpimpon, { 'attr': { 'class': 'form-horizontal' } }) }}
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="mb-3 custom-label">
                        {{ form_label(formpimpon.idPompier, 'Pompier : ', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(formpimpon.idPompier, {'attr': {'class': 'form-select'}}) }}
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="mb-3 custom-label">
                        {{ form_label(formpimpon.idFormation, 'Formation : ', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(formpimpon.idFormation, {'attr': {'class': 'form-select'}}) }}
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="mb-3 custom-label">
                        {{ form_label(formpimpon.date, 'Date : ', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(formpimpon.date, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="mb-3 custom-label">
                        {{ form_label(formpimpon.duree, 'Durée : ', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(formpimpon.duree, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="mb-3 custom-label">
                        {{ form_label(formpimpon.adresse, 'Adresse : ', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(formpimpon.adresse, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <div class="mb-3 custom-label">
                        {{ form_label(formpimpon.statut, 'Statut : ', {'label_attr': {'class': 'form-label'}}) }}
                        {{ form_widget(formpimpon.statut, {'attr': {'class': 'form-control'}}) }}
                    </div>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6">
                    <a class="btn btn-danger"
                       href="{{ path('home_formation_pimpon') }}"
                       role="button">Retour</a>
                    <button type="submit" class="btn btn-primary">Ajouter</button>
                </div>
            </div>
        </div>
        {{ form_end(formpimpon) }}
    </div>

    <footer class="footer">
        <p> Copyright © 2023 Brigade de sapeurs-pompiers de Paris </p>
    </footer>
    </body>
{% endblock %}