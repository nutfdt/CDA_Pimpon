{% extends 'base.html.twig' %}

{% block title %}Hello FormationController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Formation</h1>
    <br>
    <h2>Modification de la formation</h2>
    <br>
    {{ form_start(editFormF, { 'attr': { 'class': 'form-horizontal'}}) }}
        <div class="mb-3">
            {{ form_label(editFormF.libelle, 'Libelle : ', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(editFormF.libelle, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-3">
            {{ form_label(editFormF.cout, 'Co√ªt : ', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(editFormF.cout, {'attr': {'class': 'form-control'}}) }}
        </div>
        <div class="mb-3">
            {{ form_label(editFormF.type, 'Type : ', {'label_attr': {'class': 'form-label'}}) }}
            {{ form_widget(editFormF.type, {'attr': {'class': 'form-control'}}) }}
        </div>
        <a class="btn btn-danger"
           href="{{ path('home_formation') }}"
           role="button">Retour</a>
        <button type="submit" class="btn btn-primary">Modifier</button>
    {{ form_end(editFormF) }}

</div>
{% endblock %}
